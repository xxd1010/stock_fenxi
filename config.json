{
  "// 数据源配置": "",
  "data_source": {
    "// 数据源类型": "支持baostock和akshare",
    "type": "akshare",
    "// 登录参数": "",
    "login_params": {
      "// 用户名": "baostock默认匿名用户",
      "user_id": "anonymous",
      "// 密码": "baostock默认密码",
      "password": "123456"
    },
    "// akshare配置": "",
    "akshare": {
      "// 数据源名称": "akshare数据源名称，如stock_zh_a_hist",
      "source_name": "stock_zh_a_hist",
      "// 数据频率": "日k线: daily, 周k线: weekly, 月k线: monthly",
      "frequency": "daily",
      "// 复权类型": "不复权: qfq, 前复权: hfq, 后复权: qfq",
      "adjust": "qfq",
      "// 速率限制": "每秒最大请求数",
      "rate_limit": 5,
      "// 超时时间": "请求超时时间（秒）",
      "timeout": 30,
      "// 缓存启用": "是否启用数据缓存",
      "cache_enabled": true,
      "// 缓存过期时间": "缓存过期时间（小时）",
      "cache_expire_hours": 24
    }
  },
  "// 数据获取配置": "",
  "data_fetch": {
    "// 开始日期": "K线数据开始日期，格式YYYY-MM-DD",
    "start_date": "2000-01-01",
    "// 结束日期": "K线数据结束日期，可设置为'today'表示当天",
    "end_date": "today",
    "// 重试次数": "网络请求失败时的最大重试次数",
    "retry_count": 3,
    "// 重试间隔": "两次重试之间的间隔时间（秒）",
    "retry_interval": 5,
    "// 数据频率": "d=日线，w=周线，m=月线",
    "frequency": "d",
    "// 复权方式": "3=不复权，2=前复权，1=后复权",
    "adjustflag": "3"
  },
  "// 并发配置": "",
  "concurrency": {
    "// 线程数": "并发处理的线程数量",
    "thread_count": 3,
    "// 请求间隔": "两次请求之间的间隔时间（秒），避免请求过于频繁",
    "request_interval": 2,
    "// 最大并发请求数": "同时发送的最大请求数量",
    "max_concurrent_requests": 3,
    "// 批量处理大小": "每次批量处理的股票数量",
    "batch_size": 10
  },
  "// 输出配置": "",
  "output": {
    "// 股票列表格式": "支持csv、json、txt",
    "stock_list_format": "csv",
    "// 股票列表保存路径": "",
    "stock_list_path": "./",
    "// K线数据格式": "目前仅支持csv",
    "kline_data_format": "csv",
    "// K线数据保存路径": "",
    "kline_data_path": "D:/",
    "// 数据库路径": "SQLite数据库文件路径",
    "database_path": "stock_data.db"
  },
  "// 日志配置": "",
  "logging": {
    "// 日志级别": "DEBUG, INFO, WARNING, ERROR, CRITICAL",
    "log_level": "INFO",
    "// 日志文件路径": "",
    "log_file": "logs/stock_fetcher.log",
    "// 日志文件最大大小": "单位字节，5242880=5MB",
    "max_bytes": 5242880,
    "// 日志文件备份数量": "",
    "backup_count": 3
  },
  "// 测试模式配置": "",
  "test_mode": {
    "// 是否启用测试模式": "true=只处理少量股票，false=处理所有股票",
    "enabled": false,
    "// 测试模式下处理的最大股票数量": "",
    "max_stocks": 10
  },
  "// 分析配置": "",
  "analysis": {
    "// 分析模式": "traditional=传统分析, llm=大模型分析, hybrid=混合分析",
    "mode": "traditional",
    "// 技术指标配置": "",
    "technical_indicators": {
      "// 均线周期": "",
      "ma_periods": [5, 10, 20, 60, 120, 250],
      "// MACD参数": "",
      "macd": {
        "fast": 12,
        "slow": 26,
        "signal": 9
      },
      "// RSI周期": "",
      "rsi_periods": [6, 12, 24],
      "// KDJ参数": "",
      "kdj": {
        "length": 9,
        "signal": 3
      },
      "// 布林带参数": "",
      "bollinger": {
        "length": 20,
        "std": 2
      },
      "// 成交量均线周期": "",
      "volume_ma_periods": [5, 10, 20]
    },
    "// 大模型配置": "",
    "llm": {
      "// 模型提供商": "baidu=百度文心一言, alibaba=通义千问, tencent=腾讯混元, bytedance=豆包, huawei=华为盘古, zhipu=智谱清言, sensecore=商汤日日新, openai=OpenAI, anthropic=Anthropic",
      "provider": "openai",
      "// 模型名称": "",
      "model_name": "gpt-4",
      "// API密钥配置": "",
      "api_keys": {
        "baidu": {
          "api_key": "",
          "secret_key": ""
        },
        "alibaba": {
          "api_key": ""
        },
        "tencent": {
          "secret_id": "",
          "secret_key": ""
        },
        "bytedance": {
          "api_key": ""
        },
        "huawei": {
          "api_key": "",
          "endpoint": ""
        },
        "zhipu": {
          "api_key": ""
        },
        "sensecore": {
          "api_key": ""
        },
        "openai": {
          "api_key": ""
        },
        "anthropic": {
          "api_key": ""
        }
      },
      "// 温度参数": "",
      "temperature": 0.1,
      "// 最大 tokens": "",
      "max_tokens": 1000,
      "// 多模型对比": "是否启用多模型对比分析",
      "multi_model_comparison": false,
      "// 对比模型列表": "",
      "comparison_models": ["ERNIE-Bot-4", "qwen-turbo", "gpt-4"]
    },
    "// 抽样配置": "",
    "sampling": {
      "// 抽样模式": "random=随机抽样, stratified=分层抽样",
      "mode": "random",
      "// 抽样比例": "",
      "ratio": 0.1,
      "// 最大样本数": "",
      "max_samples": 100,
      "// 是否启用抽样": "",
      "enabled": false
    },
    "// 报告配置": "",
    "report": {
      "// 报告格式": "markdown=Markdown, html=HTML",
      "format": "markdown",
      "// 报告保存路径": "",
      "save_path": "reports/",
      "// 是否生成图表": "",
      "generate_charts": true
    }
  },
  "// 更新管理配置": "",
  "update": {
    "// 是否启用自动更新": "",
    "auto_update_enabled": true,
    "// 更新频率": "daily=每天, weekly=每周, monthly=每月",
    "frequency": "daily",
    "// 更新时间": "格式HH:MM",
    "update_time": "09:30",
    "// 更新类型": "full=全量更新, incremental=增量更新, partial=部分更新",
    "update_type": "incremental",
    "// 增量更新天数": "",
    "incremental_days": 7,
    "// 是否启用数据校验": "",
    "validation_enabled": true,
    "// 批量处理大小": "每次处理的股票数量",
    "batch_size": 100,
    "// 超时时间": "单位秒",
    "timeout": 3600
  }
}